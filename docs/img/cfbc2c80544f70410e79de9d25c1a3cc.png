<div id="background">
    <div id="ground">&nbsp;</div>
    <div id="sky">&nbsp;</div>
</div>

<div id="daysContainer">

    <div role="main" id="days">
        <!-- I get filled up on the fly -->
    </div>

</div>

<div id="fixed">

    <header>
        <h1><span>&nbsp;</span>SitePoint Christmas Sale</h1>
        <button id="toggle-animations"><span>Animations</span></button>
        <button id="share-to-facebook"><span>Like</span></button>
        <button id="share-to-twitter"><span>Tweet</span></button>
        <a class="podlings" href="" target="_blank"><span>PODLING</span></a>
    </header>

    <nav>
        <ul id="daysNav"></ul>
    </nav>

    <div id="info-wrap">
        <div id="all-info"></div>


        <div id="pricing">

            <div id="original">
                <h3>
                    Was
                    <span class="price original-price">-</span>
                </h3>
            </div>

            <div id="new">
                Now
                <span class="price new-price">-</span>
            </div>

            <div id="saving">
                <h3>
                    Save
                    <span class="price save-percent">-</span>
                </h3>
            </div>
            <div class="timer">
                <h3>Ends in:</h3>
                <strong id="timer">23:55:01</strong>
            </div>

            <a class="dealfuel-link" href="" target="_blank">
                <div class="available-on-df">
                    <h3>Deal available on DealFuel</h3>
                    <strong class="dealfuel-logo">Dealfuel</strong>
                </div>
            </a>

            <div class="deal-closed">
                <h3>DEAL CLOSED</h3>
            </div>
        </div>

        <div id="checkout">
            <div class="inner">
                <h2>Buy Now!</h2>
                <form id="checkout-form" action="#" method="POST" target="_blank">
                    <div class="inputs-container"></div>
                    <p class="hamper-line">With every purchase, you get a <strong>FREE</strong> Bonus Coupon Hamper!</p>
                    <p><input type="submit" id="buy-button" value="Buy now!" /></p>
                    <p><a class="current-deal"></a></p>
                    <input type="hidden" name="current-day" id="current-day-hidden">
                </form>
            </div>
        </div>

        <div id="index"></div>

    </div>
    <button class="prev-arrow">Previous</button>
    <button class="next-arrow">Next</button>
</div>


<script id="checkout_radiobutton" type="text/template">
    <div class="radio-input radio-col radio-col-10">
        <input type="radio" name="bundle-radios" value="<%- name %>" id="bundle-radio<%- id %>" <% if (checked==true) { %>checked<% } %> <% if (!inStock) { %>disabled="disabled"<% } %> />
    </div>
    <label for="bundle-radio<%- id %>">
        <div class="radio-label-text radio-col radio-col-70">
            <% if (!(inStock)) { %>
                <span class='out-of-stock-radio-label'><span class='out-of-stock-radio-label-name'><%- name %></span> (out of stock)</span>
            <% } else { %>
                <%- name %><span class='radio-label-more'> - more</span>
                <span class="bundle-subtitle"><%- subtitle %></span>
            <% } %>
        </div>
        <div class="radio-label-price radio-col radio-col-20">
            <span class="newprice"><% if (typeof(price) == "number" && price >= 0) { %><%- price.toMoneyString() %><% } %></span>

            <span class="oldprice"><%- oldprice %></span>
        </div>
    </label>
</script>

<script id="pickdeal_select" type="text/template">
    <select name='pick-n-choose[]'>
        <option value=''>Select... </option>
        <% for (var i=0; i<items.length; i++) { %>
            <option value='<%= items[i].sku %>' <% if (id==0 && i==index_of_first_item_which_is_in_stock) { %>selected='selected'<% } %> <% if (!(items[i].inStock)) { %>disabled='disabled'<% } %> >
                <% if (!(items[i].inStock)) { %>
                    <%- items[i].name %> (out of stock)
                <% } else { %>
                    <%- items[i].name %>
                <% } %>
            </option>
        <% } %>
    </select>
</script>

<script id="book_cover_image_template" type="text/template">
    <img src="/img/covers/<%- image_src %>" class='book-cover' alt="Click for more detail" />
</script>


<script id="less_detail_template" type="text/template">
    <div class="less-detail-container">
        <ul class="bundle-nav">
            <li class="buy"><span>buy this bundle</span></li>
            <li class="next"><span>view next bundle</span></li>
        </ul>

        <div class="description-image-container less-detail-image"></div>
        <p class="click-helper">Click a cover for more detail</p>
            <h2><%- heading %></h2>
        <p class="less-detail-text"><%= text %></p>
    </div>
</script>

<script id="sale_index" type="text/template">
    <ol>
        <% for (var i=0; i<days.length-1; i++) { %>
        <li>
            <span><%= days.at(i).get("title").substring(0,30) %></span>
        </li>
        <% } %>

        <li class="note"><span>Note: You can only buy 1 deal at a time!</span></li>

    </ol>
</script>

<script id="more_detail_template" type="text/template">
    <div class="more-detail-container">

        <div class="description-image-container more-detail-image"></div>
        <h2>
            <span><%- heading %></span>
            <a class="less-detail-button">Back</a>
        </h2>

        <div class="more-detail-text"><%= text %></div>
        <ul class="bundle-deal-disclaimer">
            <% if (type == "digital") { %>
                <li>Note: Most DIGITAL products can be downloaded as PDF, EPUB, MOBI</li>
                <li>In some cases products are only avail in PDF (when noted in description above)</li>
            <% } else if (type == "print") { %>
                <li>Note: PRINT product prices dont include shipping (unless stated otherwise)</li>
                <li>Shipping costs and options are calculated in shopping cart (on next step)</li>
            <% } else if (type == "course") { %>
                <li>Note: COURSES available online for 30 days</li>
                <li>Courses are accessed on Learnable. Once you start 1st lesson, you have 30 days to complete the course.</li>
            <% } else if (type == "poster") { %>
                <li>Note: POSTERS include FREE shipping</li>
                <li>Shipping is free when shipped with another product.</li>
            <% } %>
        </ul>


        <div class="clearfix"></div>
    </div>
</script>



